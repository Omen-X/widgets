{
  "name": "widgets",
  "version": "1.0.0",
  "description": "custom UI-elements",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start": "cross-env NODE_ENV=development nodemon --watch webpack.config.js --exec webpack-dev-server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omen-x/widgets"
  },
  "author": "Denis Volok",
  "homepage": "https://github.com/omen-x/widgets",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "semi": "warn",
      "spaced-comment": 0,
      "indent": 0,
      "comma-dangle": 0,
      "func-names": "warn",
      "newline-per-chained-call": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "class-methods-use-this": "warn",
      "import/first": 0,
      "allowTernary": 0,
      "array-callback-return": 0
    }
  },
  "browserslist": [
    "last 3 versions",
    "not ie < 10"
  ],
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "css-mqpacker": {},
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-webpack-plugin": "^1.4.4",
    "node-sass": "^4.5.3",
    "postcss-import": "^10.0.0",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.6",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "node-notifier": "^5.1.2"
  }
}
