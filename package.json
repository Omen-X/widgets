{
  "name": "Widgets",
  "version": "1.0.0",
  "description": "Simple widgets,interface elements",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Denis Volok",
  "homepage": "https://github.com/omen-x/widgets",
  "license": "ISC",
  "jshintConfig": {
    "indent": 1,
    "esversion": 6,
    "freeze": true,
    "latedef": "nofunc",
    "notypeof": true,
    "loopfunc": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true,
      "jquery": true
    },
    "globals": {
      "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "extends": "airbnb",
    "rules": {
      "no-unused-vars": "warn",
      "semi": "warn",
      "spaced-comment": 0,
      "indent": 0,
      "comma-dangle": 0,
      "func-names": 0,
      "newline-per-chained-call": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "class-methods-use-this": "warn",

      "no-new": 0,
      "padded-blocks": 0,
      "no-param-reassign": 0
    }
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-preset-latest": "^6.16.0",
    "browser-sync": "^2.17.5",
    "del": "^2.2.2",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-babel": "^6.1.2",
    "gulp-cache": "^0.4.5",
    "gulp-clean-css": "^2.0.13",
    "gulp-concat": "^2.6.0",
    "gulp-file-include": "^1.0.0",
    "gulp-load-plugins": "^1.4.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.0.0",
    "gulp-sass-glob": "^1.0.8",
    "gulp-uglify": "^2.0.0",
    "node-bourbon": "^4.2.8",
    "vinyl-ftp": "^0.5.0"
  },
  "dependencies": {}
}
